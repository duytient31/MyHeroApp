<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/background_light"
        android:layout_marginHorizontal="@dimen/margin_hor"
        android:layout_marginVertical="@dimen/margin_ver"
        android:elevation="1dp"
        app:contentPadding="8dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_image"
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:layout_alignParentLeft="true"
                android:layout_marginHorizontal="@dimen/margin_hor"
                tools:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/hero_name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/item_image"
                android:textColor="@color/black"
                android:textSize="@dimen/title_item"
                tools:text="Wolverine"

                />

            <TextView
                android:id="@+id/hero_abilities_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hero_name_item"
                android:layout_toRightOf="@+id/item_image"
                android:textSize="@dimen/text_item"
                tools:text="Wolverine"
                />

            <ImageView
                android:id="@+id/ic_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin_hor"
                android:src="@drawable/ic_like"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
